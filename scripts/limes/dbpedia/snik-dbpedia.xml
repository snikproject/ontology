<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE LIMES SYSTEM "limes.dtd">
<LIMES>
	<PREFIX>
		<NAMESPACE>http://www.snik.eu/ontology/meta/</NAMESPACE>
		<LABEL>meta</LABEL>
	</PREFIX>
	<PREFIX>
		<NAMESPACE>http://www.snik.eu/ontology/ob/</NAMESPACE>
		<LABEL>ob</LABEL>
	</PREFIX>
	<PREFIX>
		<NAMESPACE>http://www.snik.eu/ontology/bb/</NAMESPACE>
		<LABEL>bb</LABEL>
	</PREFIX>
	
	<PREFIX>
		<NAMESPACE>http://www.w3.org/1999/02/22-rdf-syntax-ns#</NAMESPACE>
		<LABEL>rdf</LABEL>
	</PREFIX>
	
	<PREFIX>
		<NAMESPACE>http://www.w3.org/2000/01/rdf-schema#</NAMESPACE>
		<LABEL>rdfs</LABEL>
	</PREFIX>

	<PREFIX>
		<NAMESPACE>http://www.w3.org/2002/07/owl#</NAMESPACE>
		<LABEL>owl</LABEL>
	</PREFIX>
	
	<PREFIX>
		<NAMESPACE>http://www.w3.org/2004/02/skos/core#</NAMESPACE>
		<LABEL>skos</LABEL>
	</PREFIX>
	
	<SOURCE>
		<ID>snik</ID>
		<!-- snik.nt is generated by script/release-->
		<ENDPOINT>/tmp/snik.nt</ENDPOINT>
		<VAR>?snik</VAR>
		<PAGESIZE>-1</PAGESIZE>
		<RESTRICTION>?snik a owl:Class</RESTRICTION>
		<PROPERTY>rdfs:label AS nolang RENAME label</PROPERTY>
		<!--<PROPERTY>skos:altLabel AS nolang RENAME altLabel</PROPERTY>-->
		<TYPE>N-TRIPLE</TYPE>
	</SOURCE>

	<TARGET>
		<ID>dbpedia</ID>
		<ENDPOINT>dbpedia-ascii-5m.ttl</ENDPOINT><!-- first 5 million lines of dbpedia-ascii.ttl, more didn't fit in 10GB heap space -->
		<VAR>?dbpedia</VAR>
		<PAGESIZE>-1</PAGESIZE>
		<RESTRICTION>?dbpedia rdfs:label ?v1</RESTRICTION>
		<PROPERTY>rdfs:label AS nolang RENAME label</PROPERTY>
		<TYPE>N-TRIPLE</TYPE> <!--The DBpedia label dump has type ttl but in fact is only ntriples. -->
	</TARGET>

<METRIC>exactMatch(snik.label,dbpedia.label)</METRIC>
<!--<METRIC>OR(exactMatch(x.label,y.label),exactMatch(x.altLabel,y.label))</METRIC>-->
	
	<ACCEPTANCE>
		<THRESHOLD>1</THRESHOLD>
		<FILE>out/snik-dbpedia-exact.ttl</FILE>
		<RELATION>skos:exactMatch</RELATION>
	</ACCEPTANCE>
	
	<REVIEW>
		<THRESHOLD>0.8</THRESHOLD>
		<FILE>out/snik-dbpedia-close.ttl</FILE>
		<RELATION>skos:closeMatch</RELATION>
	</REVIEW>

	<EXECUTION>
		<REWRITER>default</REWRITER>
		<PLANNER>default</PLANNER>
		<ENGINE>default</ENGINE>
	</EXECUTION>

	<OUTPUT>N3</OUTPUT>
</LIMES>
